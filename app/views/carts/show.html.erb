<div class="flex-grow mx-auto p-6 w-full flex flex-col">
  <h1 class="text-2xl mb-4">Cart</h1>

  <div id="cart-items" class="flex-grow w-full flex flex-col items-center justify-center">
    <% if @cart.empty? %>
      <div class='flex flex-col items-center gap-2'>
        <%= image_tag("cart-empty.png", alt: "Empty cart", class: "h-10 w-auto mb-5") %>
        <h2 class='text-2xl'>The cart is empty</h2>
        <p class='text-gray-800 text-xs'>Add items from the catalog</p>
      </div>
    <% else %>
      <%= render @products %>
      <div class="mt-4 text-xl">
        Total: $<span id="total-price"><%= @cart.total_amount %></span>
      </div>
    <% end %>
  </div>
</div>