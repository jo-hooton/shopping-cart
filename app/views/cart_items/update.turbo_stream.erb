<%= turbo_stream.update @cart_item %>
<%= turbo_stream.replace dom_id(@cart, :total) do %>
  <%= render "carts/total", cart: @cart %>
<% end %>
<%= turbo_stream.update dom_id(@cart_item.cart, :item_count) do %>
  <%= link_to "Cart #{@cart_item.cart.total_items}", cart_path(@cart_item.cart), class: 'cursor-pointer', id: dom_id(@cart_item.cart, :item_count) %>
<% end %>