<%= turbo_frame_tag cart_item, class: "w-full" do %>
  <div class="relative w-full p-4 border-b border-gray-200">
    <!-- Delete Button -->
    <%= button_to cart_item_path(cart_item), method: :delete, class: "absolute top-4 right-4" do %>
      <%= image_tag("delete-icon.png", alt: "Delete", class: "h-5 w-5 cursor-pointer opacity-50 hover:opacity-100 transition-opacity") %>
    <% end %>

    <div class="grid grid-cols-[100px_1fr_1fr_100px] items-center gap-6">
      <!-- Product Image -->
      <%= image_tag("cart-empty.png", alt: "Empty cart", class: "h-32 w-auto") %>

      <!-- Product Name -->
      <div class="texrt-lg font-medium text-gray-900">
        <%= cart_item.product.name %>
      </div>

      <!-- Quantity Input -->
      <%= simple_form_for cart_item, method: :patch, html: { class: "flex items-center", data: { turbo: true } } do |f| %>
        <%= f.input :quantity, 
          label: false, 
          input_html: { 
            min: 1, 
            class: "border border-gray-300 rounded-md p-2 w-16 text-center", 
            onchange: "this.form.requestSubmit();"
          } 
        %>
      <% end %>

      <!-- Price -->
      <div class="text-lg font-semibold text-gray-900 text-right">
        $<%= cart_item.display_price %>
      </div>
    </div>
  </div>
<% end %>